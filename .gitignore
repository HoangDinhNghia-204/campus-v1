# Ignore everything in web folder by default
/web/*

# But allow custom modules
!/web/modules/
web/modules/*
!/web/modules/custom/

# Allow custom themes
!/web/themes/
web/themes/*
!/web/themes/custom/

# Allow composer files
!/composer.json
!/composer.lock

# Allow needed site settings
!/web/sites/
web/sites/*
!/web/sites/default/
web/sites/default/*
!/web/sites/default/settings.php
!/web/sites/default/services.yml

# Ignore vendor & Drupal core (will be installed via composer)
vendor/
web/core/
web/modules/contrib/
web/themes/contrib/
/web/sites/default/settings.php
/web/sites/default/files/
